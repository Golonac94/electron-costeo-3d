{
  "name": "electron-costeo-3d",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "postbuild": "mkdir -p dist/main/database && cp src/main/database/esquema.sql dist/main/database/",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -w",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build && tsc",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron": "^37.2.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "cross-env": "^7.0.3",
    "wait-on": "^8.0.2"
  }
}
